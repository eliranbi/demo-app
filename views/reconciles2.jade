block content
  .box.span12
    .box-header
      h2
        i.halflings-icon.white.align-justify
        span.break
        | Reconciles2
      .box-icon
        a.btn-setting(href='#')
          i.halflings-icon.white.wrench
        a.btn-minimize(href='#')
          i.halflings-icon.white.chevron-up
        a.btn-close(href='#')
          i.halflings-icon.white.remove
    .box-content
      table.table.table-bordered
        thead
          tr
            th Contract Id
            th Seller
            th Effective Dates
            th Price
            th Volume
            th Actual
            th Total
            th Status
            th Actions
        tbody
          //-- Dyanmicly loading table content ...
          each item in items
            tr
              td=item.contractId
              td=item.companyName
              td=item.dates
              td.center=item.price
              td.center=item.volume
              td.center=item.actual
              td.center=item.total
              td.center
                //span.label.label-success=item.status
                span
                  b=item.status
              td.center
                button.btn.btn-small.btn-success Accept
                &nbsp&nbsp
                button.btn.btn-small.btn-danger Reject

          tr.even
